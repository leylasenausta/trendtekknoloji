@model TrendTeknoloji.DB.Haber
@{
    if (string.IsNullOrEmpty(Model.imagename))
    {
        Model.imagename = "http://placehold.it/350x200";
    }
}

<div class="text-body" style="width:1100px; height:auto; background-color:#0d0d0d ;margin-top:50px">

    <img src="~/@Model.imagename" style=" height:400px; width:900px ;margin-top:40px; margin-left:100px">
    <h3 class="display-4 " style="color:#cccccc; margin-left:15px; margin-right:15px; margin-top:30px">@Model.Name</h3>
    <p class="lead" style="height:auto; color:#d9d9d9; margin-top:10px ; margin-left:15px; margin-right:25px ;text-align:justify; text-indent:15px;">
        @Model.Text <br>
    </p>


</div>


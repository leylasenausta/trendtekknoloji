@model TrendTeknoloji.Models.Account.RegisterModels
@{
    ViewBag.Title = "Register";
}






    <div class="row my-4 ">
        <div class="col-md-4 offset-md-4 my-4">
            @using (Html.BeginForm())
            {
                
                    <div class="card card-default shadow">
                        <div class="card-header">
                            <div class="row">

                                <div class="col-md-3">
                                    <h3> <span><i class="fas fa-user-plus fa-2x"></i></span></h3>
                                </div>
                                <div class="col-md-9 text-right">
                                    <h2>Üye Ol</h2>
                                    @if (ViewBag.reError != null && string.IsNullOrEmpty((string)ViewBag.reError) == false)
                                    {
                                        <small style="color:red">@ViewBag.reError</small>
                                    }
                                    else
                                    {
                                        <small>Lütfen e-posta ve şifrenizi yazınız</small>
                                    }

                                </div>
                            </div>
                        </div>
                        <div class="card-body">

                            <div class="form-group">
                               
                                @Html.TextBoxFor(model => model.Member.Name, new { @class = "form-control", placeholder = "isim", type = "text", required = "required" })


                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Member.Surname, new { @class = "form-control", placeholder = "soy isim", type = "text" ,required = "required" })


                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Member.Email, new { @class = "form-control", placeholder = "mail adresi", type = "email", required = "required" })


                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Member.Password, new { @class = "form-control", placeholder = "şifre giriniz", type = "password", required = "required" })


                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.RePassword, new { @class = "form-control", placeholder = "yeniden şifre giriniz", type = "password", required = "required" })



                            </div>

                        </div>
                        <div class="card-footer text-muted text-right">
                            <a href="@Url.Action("Login","Account")" class="btn" style="background-color: #e6e6e6;color: black">
                                <span><i class="fas fa-sign-in-alt"></i> </span>Giriş Yap
                            </a>
                            <button class="btn" style="background-color: #ff944d ; color:black" type="sumbit">
                                <span><i class="fas fa-user-tag"></i> Kayıt Ol</span>
                            </button>
                        </div>
                    </div>




               
            }




        </div>

    </div>



@{
    ViewBag.Title = "Şifremi Unuttum";
}

@using (Html.BeginForm())
{
    <div class="row my-4 ">
        <div class="col-md-4 offset-md-4 my-4">
            <form>
                <div class="card card-default shadow">
                    <div class="card-header">
                        <div class="row">

                            <div class="col-md-2">
                                <h3> <span><i class="fas fa-star-of-life fa-2x"></i></span></h3>
                            </div>
                            <div class="col-md-10 text-right">
                                <h3> Şifremi Unuttum</h3>
                                <small style="color:red;">@ViewBag.reError</small> <br/>

                                <small>Lütfen e-posta adresinizi giriniz</small>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <input type="email" name="email" id="email" placeholder="e-posta" class="form-control">
                        </div>

                    </div>
                    <div class="card-footer text-muted text-right">

                        <button type="submit" class="btn" style="background-color: #ff944d ; color:#4d4d4d">
                            <span><i class="fas fa-step-forward"></i> </span>Gönder
                        </button>
                    </div>
                </div>




            </form>



        </div>

    </div>

}


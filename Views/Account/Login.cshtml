@model TrendTeknoloji.Models.Account.LoginModel
@{
    ViewBag.Title = "Login";
}



<div class="row my-4 ">
    <div class="col-md-4 offset-md-4 my-4">
        @using (Html.BeginForm())
        {
            
                <div class="card card-default shadow">
                    <div class="card-header">
                        <div class="row">

                            <div class="col-md-3">
                                <h3> <span></span></h3>
                            </div>
                            <div class="col-md-9 text-right">
                                <h2>Üye Girişi</h2>

                                <small style="color:red">@TempData["Info"]</small> <br/>

                                @if (ViewBag.reError != null && string.IsNullOrEmpty((string)ViewBag.reError) == false)
                                {
                                    <small style="color:red">@ViewBag.reError</small>
                                }
                                else
                                {
                                    <small>Lütfen e-posta ve şifrenizi yazınız</small>
                                }

                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Members.Email, new { @class = "form-control", placeholder = "mail adresi", type = "email" })

                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Members.Password, new { @class = "form-control", placeholder = "şifre giriniz", type = "password" })

                        </div>
                    </div>
                    <div class="card-footer text-muted text-right">
                        <a href="~/Account/ForgotPassword" class="btn" style="background-color: #ff944d ; color:#4d4d4d">
                            Şifremi Unuttum
                        </a>
                        <button class="btn" style="background-color: #e6e6e6; color: black" type="sumbit">
                            <span><i class="fas fa-sign-in-alt"></i> </span> Giriş Yap
                        </button>
                    </div>
                </div>




         
        }




    </div>

</div>
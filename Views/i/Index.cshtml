@model TrendTeknoloji.Models.i.indexmodel
@{
    ViewBag.Title = "Index";
    List<TrendTeknoloji.DB.Categories> categories = new List<TrendTeknoloji.DB.Categories>();

}


<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/image/arka3.png" class="d-block w-100" alt="..." style="height:400px">
        </div>
        <div class="carousel-item">
            <img src="~/image/Adsız tasarım.png" class="d-block w-100" alt="..." style="height:400px; background-color:black" />
            <div class="carousel-caption d-none d-md-block">
                <h1 data-text="TrendTeknoloji" style="height:200px">TrendTeknoloji</h1>
            </div>
        </div>
       
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>




<div class="row">
    <div class="col-md-3 my-5">
        @Html.Partial("_MenuCategory", (List<TrendTeknoloji.DB.Categories>)ViewBag.menucategory)

    </div>


    <div class="col-md-9 my-5">
        <div class="row">
            @foreach (var item in Model.Haber)
            {
                @Html.Partial("HaberItem", item);

            }
        </div>
    </div>
</div>

<style>
    h1 {
        top: 50%;
        left: 50%;
        transform: tranaslate(-50%,-50%);
        margin: 0;
        padding: 0;
        font-size: 4em;
        color: #d9d9d9;
        
        -webkit-text-stroke: 2px #fff;
        text-align: center;
    }

        h1:before {
            content: attr(data-text);
            position: absolute;
            background: linear-gradient(90deg, #262626, #333333, #404040, #4d4d4d, #595959);
            background-size: 300%;
            overflow: hidden;
            transition: width 2s;
            animation: animate 5s linear infinite;
            width: 0;
            -webkit-background-clip: text;
            -webkit-text-fill-color: #262626;
        }

        h1:hover:before {
            width: 100%;
        }

    keyframes animate {
        0%

    {
        background-position: 0 0;
    }

    100% {
        background-position: 300% 0;
    }
    }
</style>
